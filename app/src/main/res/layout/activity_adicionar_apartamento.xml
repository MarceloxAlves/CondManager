<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.AdicionarApartamentoActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/numero_apartamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/n_do_apartamento"
            android:inputType="number"
            android:layout_marginVertical="10dp"/>
        <EditText
            android:id="@+id/quantidade_quartos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/n_de_quartos"
            android:inputType="number"
            android:layout_marginVertical="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginVertical="10dp">
            <RadioButton
                android:id="@+id/propietario_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/propietario"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/inquilino_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inquilino"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/vazio_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vazio"
                android:layout_weight="1"/>
        </RadioGroup>
        <Spinner
            android:id="@+id/proprietarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">
        </Spinner>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salvar"
            android:layout_gravity="end"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>

</ScrollView>